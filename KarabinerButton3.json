{
  "title": "X Mousei style actions",
  "rules": [
    {
      "description": "X mouse middle-button paste",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button3"
          },
          "to": [
            {
              "key_code": "v",
              "modifiers": [
                "left_command"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^org\\.mozilla\\.firefox$",
                "^com\\.google\\.Chrome$",
                "^com\\.apple\\.Safari$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "browser [command]+mouse middle-button paste",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button3",
            "modifiers": {
              "mandatory": [
                "command"
              ]
            }
          },
          "to": [
            {
              "key_code": "v",
              "modifiers": [
                "left_command"
              ]
            }
          ],
          "conditions": [
            {
              "bundle_identifiers": [
                "^org\\.mozilla\\.firefox$",
                "^com\\.google\\.Chrome$",
                "^com\\.apple\\.Safari$"
              ]
            }
          ]
        }
      ]
    }
  ]
}
